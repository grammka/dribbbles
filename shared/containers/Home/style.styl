.container
  width: 900px
  margin 40px auto 100px


.cards
  margin -10px -10px 0
  font-size: 0

.cardContainer
  width: 50%
  display-inline-block()

.card
  background-color: #fff
  margin: 20px 10px 0
  overflow: hidden
  text-decoration: none !important
  color #000 !important

.cardPreview
  display: block
  background-color: #e6f2f9
  background-size cover
  background-position: center
  background-repeat: no-repeat
  padding-bottom: 55%
  overflow: hidden
  border-radius 3px
  &:hover
  	box-shadow #b400ff 0 0 0 1px

.cardContent
  padding 15px 0 15px 10px

.cardAuthorAvatar
  display: block
  margin-right: 12px

.cardTitle
  display: block
  margin-bottom: 6px
  position: relative
  text-decoration: none !important
  font-size: 22px
  color #000 !important
  &:hover
  	&:after
      content ''
      display: block
      width: 100%
      height: 1px
      background-color: #000
      absolute bottom 0 left 0

.cardAuthorNameContainer
  font-size: 14px

.cardAuthorName
  text-decoration: none !important
  font-weight: 600
